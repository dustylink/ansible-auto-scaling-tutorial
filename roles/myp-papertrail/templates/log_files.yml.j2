files:
  # Standard System stuff...
  - /var/log/fail2ban.log
  - /var/log/auth.log
  - /var/log/syslog
  - /var/log/mail.log
  - /var/log/mail.err
  # Apache logs
  - /var/log/apache2/error.log
  - /var/log/apache2/other_vhosts_access.log
  # Application logs
  - /var/mypizza/storefront/log/production.log
  - /var/mypizza/storefront/log/sandbox.log
  - /var/mypizza/storefront/log/qa.log
  - /var/mypizza/storefront/log/demo.log
  - /var/mypizza/admin/log/jobs.log
  - /var/mypizza/worker/log/jobs.log
exclude_patterns:
  - GET /500.html
destination:
  host: {{ papertrail_host }}
  port: {{ papertrail_port }}
  protocol: tls
new_file_check_interval: "10"
